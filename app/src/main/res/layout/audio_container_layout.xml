<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    android:id="@+id/audioContainerCardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/colorSheetBackground"
    app:cardElevation="5dp">
    <LinearLayout android:id="@+id/audioLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/playPauseIV"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/ic_play"
            android:tint="@color/colorIcons"
            android:layout_margin="@dimen/_4sdp"
            android:background="@drawable/background_button"/>

        <SeekBar
            android:id="@+id/audioSeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/_4sdp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/deleteAudioIV"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/ic_delete"
            android:tint="@color/colorDelete"
            android:layout_margin="@dimen/_4sdp"
            android:background="@drawable/background_button"/>


    </LinearLayout>
</androidx.cardview.widget.CardView>
