<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/onBackPressedDialogContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_10sdp"
    android:background="@drawable/background_dialog"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/areYouSureTV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:background="@null"
        android:fontFamily="@font/nunito_regular"
        android:gravity="center_vertical"
        android:text="Are you sure you want to go back?"
        android:textColor="@color/colorWhite"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="textUri"
        android:textColorHint="@color/colorTextHint"
        android:textSize="@dimen/_13ssp"
        android:paddingStart="@dimen/_8sdp"
        android:paddingEnd="@dimen/_8sdp"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/yesGoBackTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:text="YES"
        android:textColor="@color/colorAccent"
        android:fontFamily="@font/nunito_semibold"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintTop_toBottomOf="@id/areYouSureTV"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/_8sdp"
        android:includeFontPadding="false"
        android:background="@drawable/background_button"/>

    <TextView
        android:id="@+id/cancelGoBackTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:text="CANCEL"
        android:textColor="@color/colorAccent"
        android:fontFamily="@font/nunito_semibold"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintTop_toBottomOf="@id/areYouSureTV"
        app:layout_constraintEnd_toStartOf="@id/yesGoBackTV"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="@dimen/_8sdp"
        android:includeFontPadding="false"
        android:background="@drawable/background_button"/>


</androidx.constraintlayout.widget.ConstraintLayout>